<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" prefHeight="600.0" prefWidth="1000.0" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainBoard.MainBoardController">
  <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
  
  <Label fx:id="welcome" text="Welcome to the main board !" GridPane.columnIndex="0" GridPane.rowIndex="0" />
  
  <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <Button id="button" onAction="#addMember" text="Add library member" />
  </HBox>
  
  <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="1">
      <Button id="button" onAction="#checkoutBook" text="Checkout book" />
  </HBox>
  
  <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="3" GridPane.rowIndex="1">
      <Button id="button" onAction="#addCopyBook" text="Add copy of an existing book" />
  </HBox>
  <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="4" GridPane.rowIndex="1">
        <Button id="button" onAction="#addBook" text="Add copy of an existing book" />
  </HBox>

   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
  
</GridPane>
